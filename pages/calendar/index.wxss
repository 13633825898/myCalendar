  font-size: 16px;
  margin: 8px;
  margin-bottom: 8px;
  background-color: #fff;
  display: inline-block;
  text-align: center;
  width:40px;
}

.myWeek{
  width: 13%;
  text-align: center;
  font-size: 16px;
  margin: 8 auto;
  margin-left: 9rpx;
  display: inline-block;
  line-height: 90rpx;
  background-color: #fff;
  color: #000;
}

